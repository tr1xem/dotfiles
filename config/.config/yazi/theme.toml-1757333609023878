[manager]
cwd = { fg = "#c6c6c6", bold=true}

hovered         = { fg = "#000000", bg = "#d4d4d4" }
preview_hovered = { underline = true, bold=true }


[status]
separator_open  = ""
separator_close = ""
separator_style = { fg = "#000000", bg = "#d4d4d4" }

# Mode
mode_normal = { fg = "#1b1b1b",   bg = "#ffffff", bold = true }
mode_select = { fg = "#1b1b1b", bg = "#c6c6c6", bold = true }
mode_unset  = { fg = "#1b1b1b",  bg = "#e2e2e2", bold = true }

[which]
mask            = { bg = "#1f1f1f" }
cand            = { fg = "#ffffff" }
desc            = { fg = "#c6c6c6" }
separator       = " îªœ "
separator_style = { fg = "#e2e2e2" }

[filetype]
rules = [
	# Images
	{ mime = "image/*", fg = "#c6c6c6" },

	# Videos
	{ mime = "video/*", fg = "#e2e2e2" },
	{ mime = "audio/*", fg = "#e2e2e2" },

	# Archives
	{ mime = "application/zip",             fg = "#ffb4ab" },
	{ mime = "application/gzip",            fg = "#ffb4ab" },
	{ mime = "application/x-tar",           fg = "#ffb4ab" },
	{ mime = "application/x-bzip",          fg = "#ffb4ab" },
	{ mime = "application/x-bzip2",         fg = "#ffb4ab" },
	{ mime = "application/x-7z-compressed", fg = "#ffb4ab" },
	{ mime = "application/x-rar",           fg = "#ffb4ab" },

	# Fallback
	{ name = "*", fg = "#ffffff", bold=true },
	{ name = "*/", fg = "#c6c6c6", bold=true }
]
